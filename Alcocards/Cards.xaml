<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alcocards.Cards"
             >
    <StackLayout Background="#111111" HorizontalOptions="Center" WidthRequest="1000">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,15"
            VerticalOptions="Center"
            >
            <ImageButton WidthRequest="300" CornerRadius="30"  HeightRequest="450" Source="three.png" x:Name="cardPick" Clicked="FindCard">
                </ImageButton>
            <Label HorizontalTextAlignment="Center" Text="Oznaczenie karty" FontSize="20" WidthRequest="400" TextColor="#fff" x:Name="task"></Label>
           
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>