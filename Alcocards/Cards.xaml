<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alcocards.Cards"
             >
    <StackLayout Background="#1E1E1E" HorizontalOptions="Center" WidthRequest="1000">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,15"
            VerticalOptions="Center"
            >
            <Label 
                x:Name="playerName"
                Text="Nazwa Gracza"
                TextColor="#fff"
                FontFamily="Jetbrains"
                FontSize="25"
                HorizontalTextAlignment="Center"
                />
            <ImageButton WidthRequest="300" CornerRadius="30" Source="" HeightRequest="480" x:Name="cardPick" Clicked="FindCard">
            </ImageButton>
            <Label HorizontalTextAlignment="Center" Text="Oznaczenie karty" FontSize="18" FontFamily="Jetbrains" WidthRequest="300" HeightRequest="150" TextColor="#fff"  x:Name="task"></Label>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>