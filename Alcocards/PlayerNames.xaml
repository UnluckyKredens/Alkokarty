<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alcocards.PlayerNames"
             >
    <VerticalStackLayout Background="#1E1E1E">
        <Image Source="logo.png" Scale="0.5"/>
        <Label TextColor="White"  HorizontalTextAlignment="Center" FontSize="24" FontFamily="Jetbrains" Margin="0,0,0,30">Nazwij graczy</Label>
        <StackLayout
            x:Name="Layout"
            Background="#1E1E1E"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        </StackLayout>
        <ImageButton Source="next.png" WidthRequest="70" HeightRequest="70" Margin="0,40,0,0" CornerRadius="30" Clicked="NextPage">
        </ImageButton>
    </VerticalStackLayout>
</ContentPage>