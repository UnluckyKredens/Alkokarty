<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alcocards.MainPage">

    <ScrollView Background="#1E1E1E">
        <VerticalStackLayout
            Spacing="0"
            Padding="0,0"
            VerticalOptions="Start"
            >
            <Image Source="logo.png" Scale="0.6"/>
            <ImageButton WidthRequest="150" Source="next.png" HeightRequest="80" Margin="0,160,0,0" CornerRadius="30" Clicked="NextPage"></ImageButton>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
